<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NCAA QB Rating"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/welcome"
        />


        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/welcome"
        android:id="@+id/user_name"
        android:hint="Seu nome aqui"
        android:textSize="20sp"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/user_yards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Total de jardas"
        android:inputType="text|numberDecimal"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="335dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_yards"
        android:layout_marginBottom="100dp"
        android:id="@+id/user_td"
        android:hint="Total de TDs"
        android:textSize="20sp"
        android:inputType="text|numberDecimal"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_td"
        android:layout_marginBottom="100dp"
        android:id="@+id/user_comp"
        android:hint="Total de passes completos"
        android:textSize="20sp"
        android:inputType="text|numberDecimal"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_comp"
        android:layout_marginBottom="100dp"
        android:id="@+id/user_int"
        android:hint="Total de interceptações"
        android:textSize="20sp"
        android:inputType="text|numberDecimal"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_int"
        android:layout_marginBottom="100dp"
        android:id="@+id/user_att"
        android:hint="Total de tentativas"
        android:textSize="20sp"
        android:inputType="text|numberDecimal"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_att"
        android:layout_marginTop="50dp"
        android:onClick="ratingCalc"
        android:text="Calcular!"
        android:textSize="20sp"
        android:id="@+id/bt_01"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#4CAF50"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_01"
        android:id="@+id/result"
        />

</androidx.constraintlayout.widget.ConstraintLayout>